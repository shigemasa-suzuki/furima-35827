<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <div class="Card__title">
    <h2>カード情報</h2>
  </div>
  <div class="Card_info">
    【カード番号】
    <br>
    <%= "**** **** **** " + @card[:last4] %>
    <%# カード番号の下4桁を取得 %>

    <br>
    【有効期限】
    <br>
    <%= @card[:exp_month] %>
    <%# 有効期限の「月」を取得 %>
    /
    <%= @card[:exp_year] %>
    <%# 有効期限の「年」を取得 %>
  </div>
  <div class="Account__info">
    <h2>ユーザー情報</h2>
  </div>
  <div class="AccountPage__form">
    <%= form_for(current_user) do |f| %>
      <div class="FormField">
        <div class="FormField__first_name">
          <%= f.label :first_name %>
        </div>
        <div class="FormField__first_name">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__last_name">
          <%= f.label :last_name %>
        </div>
        <div class="FormField__last_name">
          <%= f.text_field :last_name %>
        </div>
        <div class="FormField">
        <div class="FormField__first_name_kana">
          <%= f.label :first_name_kana %>
        </div>
        <div class="FormField__first_name_kana">
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__last_name_kana">
          <%= f.label :last_name_kana %>
        </div>
        <div class="FormField__last_name_kana">
          <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__nickname">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__nickname">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__email">
          <%= f.label :email %>
        </div>
        <div class="FormField__email">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-group">生年月日</label>
      <span class="">(必須)</span>
    </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    </div>
        <br>
      </div>
      <%= f.submit "更新する" %>
    <% end %>
    <br>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
    <br>
    <%= link_to "商品一覧へ戻る", root_path%>
  </div>
</div>
